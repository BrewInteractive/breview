{% extends 'layout/default.twig' %}
{% block content %}
<div>
	<table class="table table-striped">
		<thead>
			<tr>
				<th class="col-md-6">Title</th>
				{% for a in manifest.attributes %}
				<th class="col-md-1">{{ a|attributeTitle|default('-') }}</th>
				{% endfor %}
			</tr>
		</thead>
		<tbody>
			{% for i in manifest.items %}
			<tr>
				<td><a href="{{ url('preview', {'manifest': manifestID, 'item': i.title|hash }) }}">{{ i.title }}</a> <span class="badge">{{ i.assets|length }}</span></td>
				{% for a in manifest.attributes %}
				<td>{{ i.getAttribute(a)|default('-') }}</td>
				{% endfor %}
	  		</tr>
	  		{% endfor %}
		</tbody>
	</table>
</div>
{% endblock %}