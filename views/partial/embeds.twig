{% macro flash(asset) %}
{% set containerID = 'flash-content-' ~ random(1024) %}
<div id="{{ containerID }}">
	<p>Please wait, while we open your file.</p>
</div>
<script type="text/javascript">
$(document).ready(function() {
	swfobject.embedSWF(
		"{{ asset.path }}",
		"{{ containerID }}",
		"{{ asset.width.getValue }}",
		"{{ asset.height.getValue }}",
		"9.0.0"
	);
});
</script>
{% endmacro %}

{% macro image(asset) %}
<img src="{{ asset.path }}" alt="Preview"/>
{% endmacro %}

{% macro iframe(asset) %}
<iframe src="{{ asset.path }}" width="{{ asset.width.getValue }}" height="{{ asset.height.getValue }}"/>
{% endmacro %}